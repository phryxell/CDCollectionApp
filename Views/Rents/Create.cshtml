@model CDCollectionApp.Models.Rent

@{
    ViewData["Title"] = "Hyr skiva";
    DateTime now = DateTime.Now;
}

<h1>Hyr skiva</h1>

<h4>Hyr</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Namn</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input type="hidden" asp-for="RentDate" value="@now" class="form-control" />
                <span asp-validation-for="RentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CDId" class="control-label">Skiva</label>


                <select asp-for="CDId" class="form-control" asp-items="ViewBag.CDId">
                </select>


            </div>
            <div class="form-group">
                <input type="submit" value="Hyr" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Gå tillbaka till listan</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}